{
    "manifest_version": 3,
    "name": "Dynamic Hostname Mapping",
    "description": "Map hostnames to URLs and ports dynamically.",
    "version": "1.0",
    "permissions": [
      "storage",
      "declarativeNetRequest",
      "activeTab",
      "webNavigation"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  